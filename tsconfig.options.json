{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "skipLibCheck": true,
    "esModuleInterop": true,
  }
}